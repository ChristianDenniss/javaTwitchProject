
/**
 * Basic pokemon class to create the characters
 *
 * @Christian Dennis
 * @2025-01-09
 * @0.0.1
 */
public class Pokemon
{
    private String name;
    private String type;
    private int level, maxHP, currentHP, attack, defense;
   
     public Pokemon(String name, String type, int level,int maxHP, int attack, int defense) 
     {
        this.name = name;
        this.type = type;
        this.level = level;
        this.maxHP = maxHP;
        this.currentHP = maxHP;
        this.attack = attack;
        this.defense = defense;
    }
    
    public void levelUp() {
        this.level++;
        this.maxHP += 10; // Increase health with level
        this.attack += 5;  // Increase attack with level
        this.defense += 3; // Increase defense with level
        System.out.println(name + " leveled up to level " + level);
    }

    public void takeDamage(int damage) 
    {
        int damageTaken = Math.max(0, damage - defense); // Reduce damage by defense
        this.currentHP -= damageTaken;
        if (this.currentHP <= 0) 
        {
            this.currentHP = 0;
            System.out.println(name + " has fainted!");
        } else {
            System.out.println(name + " took " + damageTaken + " damage. Remaining health: " + currentHP);
        }
    }

    public void attack(Pokemon target) 
    {
        System.out.println(this.name + " attacks " + target.name + "!");
        target.takeDamage(this.attack);
    }

    // Getter and Setter methods
    public String getName() 
    {
        return name;
    }

    public int getLevel() 
    {
        return level;
    }

    public int getHealth() 
    {
        return currentHP;
    }
    
      @Override
    public String toString()
    {
        return "Pokemon { Name: " + name + ", Type: " + type + ", Level: " + level + ", HP: " + currentHP + "/" + maxHP + ", Attack: " + attack + ", Defense: " + defense + " }";
    }


    
}

